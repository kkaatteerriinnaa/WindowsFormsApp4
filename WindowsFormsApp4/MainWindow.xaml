        Title="Magic 8 Ball" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="QuestionBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
        <Button x:Name="AskButton" Content="Ask" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="AnswerBox" HorizontalAlignment="Left" Height="23" Margin="10,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="497"/>
    </Grid>
</Window>